{
    "manifest_version": 3,
    "name": "LinkedIn Profile Scraper",
    "description": "A Chrome extension to scrape LinkedIn profiles and store them in a database.",
    "version": "1.0.0",
    "action" : {
        "default_popup": "popup.html",
        "default_title": "LinkedIn Profile Scraper",
        "default_icon" : "icon.png"
    },
    "host_permissions": ["https://www.linkedin.com/*", "http://localhost:5000/*"],
    "chrome_url_overrides": {
        "newtab": "newTab.html"
    },
    "permissions": [
        "tabs",
        "bookmarks",
        "storage",
        "identity",
        "scripting",
        "activeTab"
    ],
    "icons": {
        "16" : "icon.png",
        "48" : "icon.png",
        "128" : "icon.png"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["https://www.linkedin.com/*"],
            "js": ["contentScript.js"]
        }
    ]
}